<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityPortal.MasterDetailHome.IncidentBPage">
    <ContentPage.Content>
        <StackLayout >
            <Button x:Name="addIncident" 
                    Text="Add Incident"
                    TextColor="Black"
                    BackgroundColor="#eee"
                    BorderRadius="5"
                    FontAttributes="Bold"
                    Clicked= "AddIncident_Clicked"
                    Margin="0,0,0,0"
                    HeightRequest="80"
                    WidthRequest="10"/>

           
            
            <Button x:Name="GoBack" Text="Back to Grid Page" Clicked="GoBack_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>