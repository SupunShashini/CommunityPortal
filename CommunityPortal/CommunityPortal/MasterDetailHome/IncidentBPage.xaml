<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityPortal.MasterDetailHome.IncidentBPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Incidents!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="addIncident" 
                    Text="Add Incident"
                    TextColor="White"
                    BackgroundColor="Aqua"
                    BorderRadius="5"
                    FontAttributes="Bold"
                    Clicked= "AddIncident_Clicked" />

            <Button x:Name="GoBack" Text="Back to Grid Page" Clicked="GoBack_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>